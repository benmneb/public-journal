<%- include('partials/header') %>

<h1>Home</h1>

<p>
  <%= homeStartingContent %>
</p>

<% posts.forEach((post) => { %>
  <% const postBody = post.body; %>
  <h2> <%= post.title %> </h2>
  <p> <%= postBody.substring(0, 100) + '... ' %>
    <a href='/posts/<%= post.title.replace(/\s+/g, '-').toLowerCase(); %>'>Read More</a>
  </p>
<% }) %>

<%- include('partials/footer') %>
